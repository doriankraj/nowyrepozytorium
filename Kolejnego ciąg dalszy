 }
     
    public void actionPerformed(ActionEvent evt)
    {
        if(evt.getSource() == rysuj)
        { zmiana 2
            watek=new Thread(this); 
            watek.start();
        }
        else if(evt.getSource() == stop)
        {
            watek.stop();
        }
    }
     
    public void run() 
    {
        while(true) 
        {
            try
            { 
                Thread.currentThread().sleep(50);
                i++;
            } 
            catch (InterruptedException e ) 
            {}
            repaint();
        } 
    }
}
